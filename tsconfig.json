{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "app/*": ["src/app/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "./src",
    "./api",
    ".eslintrc.js",
    "prettier.config.js",
    "tailwind.config.js",
    "./public/oauth-service-worker.js",
    "postcss.config.js",
    "lint-staged.config.js",
    "commitlint.config.js"
  ]
}
